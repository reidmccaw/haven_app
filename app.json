{
  "expo": {
    "name": "haven_app",
    "slug": "haven_app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "The camera is needed for AR functionality",
        "NSPhotoLibraryUsageDescription": "The photo library is needed for AR functionality"
      },
      "bundleIdentifier": "com.havenapp.haven"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "package": "com.havenapp.haven"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "@reactvision/react-viro",
        {
          "ios": {
            "cameraUsageDescription": "The camera is needed for AR functionality"
          },
          "android": {
            "cameraPermission": "The camera is needed for AR functionality"
          }
        }
      ]
    ]
  }
}
